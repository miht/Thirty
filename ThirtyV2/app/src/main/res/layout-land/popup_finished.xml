<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:background="#b0000000"

    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:text="Game finished!"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="24sp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />


        <TextView
            android:id="@+id/tv_popup_scoretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:text="You got a total of 34 points.\n That's not too shabby!"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="14sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:text="Thank you for playing!"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_finished_newgame"
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:background="#00000000"

                android:text="New game"
                android:textColor="#ffffff"/>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_seesummary"
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:background="#00000000"

                android:text="Summary"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developed by Leif T. Sundkvist \nleffe_sun@hotmail.com\n"
            
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>